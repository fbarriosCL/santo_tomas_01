<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.felipe.santotomas.FormActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Correo electrÃ³nico"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="205dp"
        android:layout_below="@+id/age"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nombre"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Apellido"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="73dp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Edad"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="140dp"
        android:layout_below="@+id/lastname"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/career"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Carrera"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="274dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/clean_form"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Formulario Limpio"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="351dp"
        android:layout_above="@+id/buttom_clean"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttom_clean"
        android:layout_width="163dp"
        android:layout_height="44dp"
        android:text="Limpio"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="420dp"
        android:layout_alignTop="@+id/button_send"
        android:layout_alignStart="@+id/clean_form" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="156dp"
        android:layout_height="47dp"
        android:text="Enviar"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="420dp"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
